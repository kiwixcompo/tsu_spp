# ============================================================================
# TSU STAFF PORTAL - PRODUCTION ENVIRONMENT
# ============================================================================
# IMPORTANT: Upload this file to production server as ".env"
# Location: /home4/tsuniity/staff.tsuniversity.edu.ng/.env
# ============================================================================

# Application Settings
APP_NAME="TSU Staff Portal"
APP_ENV=production
APP_URL=https://staff.tsuniversity.edu.ng/public
APP_DEBUG=false

# Database Configuration
# IMPORTANT: Update these with your actual production database credentials
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tsuniity_staff_portal
DB_USERNAME=tsuniity_staffuser
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# Email Configuration (Gmail SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tsuniversity.edu.ng
MAIL_FROM_NAME="TSU Staff Portal"

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# Production Settings
PRODUCTION=true
